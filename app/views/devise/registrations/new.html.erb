<div class ="row">
  <div class="col-md-6 col-md-offset-3">
    <% if params[:plan] == '2' %>
    <h1 class="text-center">Pro Account</h1>
    <p>Sign up for the Pro Account for $10 per month and get access to contact information of other Users</p> 
         <br/><br/>
    <% else %>
    <h1 class="text-center">Basic Account</h1>
     <p>Sign up for free and get basic access (unable to view contact information) to the community</p> 
         <br/><br/>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2> 
      
      <% if params[:plan] == '2' %>
       <%= render "pro_form" %>
      <% else %> 
       <%= render "basic_form" %>
      <% end %>
      <%= render "devise/shared/links" %>
   </div>
 </div> 
</div>